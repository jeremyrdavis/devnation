<% provide(:title, 'DevNation Bank ATM') %>

<% if @customer %>
<h1><%= @customer.name %></h1>
<% else %>
<h1>Select Account</h1>
<% end %>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(:transaction, url: {controller: "atm", action: "create"} ) do |f| %>

      <%= f.label :transaction_type_withdrawl, "Withdrawl" %>
      <%= f.radio_button(:transaction_type, "withdrawl") %>
      <%= f.label :transaction_type, "Deposit" %>
      <%= f.radio_button(:transaction_type_deposit, "deposit") %>
      <%= f.label :amount %>
      <%= f.text_field :amount %>
      <br/>
      <%= f.submit(value: "Submit", class: "btn btn-large btn-primary") %>
    <% end %>

  </div>
</div>
