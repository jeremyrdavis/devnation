<% provide(:title, 'Signup') %>

<h1>Signup</h1>

<div class="row" >
	<div class="span6 offset3" >
		<%= form_for(@customer) do |c| %>
		<%= render 'shared/error_messages' %>

			<%= c.label :first_name %>
			<%= c.text_field :first_name %>
			
			<%= c.label :last_name %>
			<%= c.text_field :last_name %>

			<%= c.label :email %>
			<%= c.text_field :email %>

			<%= c.label :gender %>
			<%= c.text_field :gender %>

			<%= c.label :password %>
			<%= c.password_field :password %>

			<%= c.label :password_confirmation, "Confirm Password" %>
			<%= c.password_field :password_confirmation %>

			<%= c.submit "Signup", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
<% @customer.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
<% end %>
<%= link_to 'Back', customers_path %>
